<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Health Awareness"
            android:textSize="35sp"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="About some common diseases"
            android:textSize="20sp"
            android:gravity="center"/>
    </LinearLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:columnCount="2"
        android:rowCount="4"
        android:layout_marginLeft="40dp"


        android:foregroundGravity="center"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/image1"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:layout_row="0"
            android:layout_column="0"
            app:srcCompat="@drawable/cold_and_flu"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="130dp"/>
        <Button
            android:id="@+id/button1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Cold and Flu"
            android:textSize="10sp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/image2"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:layout_row="0"
            android:layout_column="1"
            app:srcCompat="@drawable/stomach_aches"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="130dp"/>
        <Button
            android:id="@+id/button2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_row="1"
            android:layout_column="1"
            android:text="Stomach Aches"
            android:textSize="10sp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/image3"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:layout_row="2"
            android:layout_column="0"
            app:srcCompat="@drawable/conjunctivitis"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="130dp"/>
        <Button
            android:id="@+id/button3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_row="3"
            android:layout_column="0"
            android:text="Conjunctivitis"
            android:textSize="10sp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/image4"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:layout_row="2"
            android:layout_column="1"
            app:srcCompat="@drawable/diarrhea"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="130dp"/>
        <Button
            android:id="@+id/button4"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_row="3"
            android:layout_column="1"
            android:text="Diarrhea"
            android:textSize="10sp"
            android:gravity="center"/>

    </GridLayout>

</RelativeLayout>